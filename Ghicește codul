  <script>
    function goToScreen(num) {
      document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
      document.getElementById('screen' + num).classList.add('active');
    }

    function generateCombinations(length) {
      const chars = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
      const result = [];
      function helper(prefix) {
        if (prefix.length === length) {
          result.push(prefix);
          return;
        }
        for (let i = 0; i < chars.length; i++) {
          helper(prefix + chars[i]);
        }
      }
      helper('');
      return result;
    }

    function startGame() {
      const secret = document.getElementById("secretInput").value;
      const length = secret.length;
      goToScreen(4);
      const start = performance.now();
      const chars = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
      let attempts = 0;
      let found = false;

      function tryGuess(current) {
        if (found) return;

        if (current.length === length) {
          attempts++;
          if (current === secret) {
            const time = ((performance.now() - start) / 1000).toFixed(2);
            document.getElementById("status").innerText = `âœ… Codul ghicit: ${current}`;
            document.getElementById("result").innerText = `ÃncercÄƒri: ${attempts} â€¢ Timp: ${time} secunde`;
            found = true;
            return;
          }
          return;
        }

        for (let i = 0; i < chars.length; i++) {
          if (found) break;
          tryGuess(current + chars[i]);
        }
      }

      setTimeout(() => {
        tryGuess("");
      }, 500);
    }
  </script>
